{
  "SYMBOL": "XAUUSD.PRO",
  "TIMEFRAME": "15m",
  "DEMO_MODE": false,
  "AGENT_MODE": "guard",
  "ENABLE_REGIME": true,
  "ENABLE_CONFORMAL": true,
  
  "strategy": {
    "min_conf": 0.55,
    "atr_conf_scale": [0.5, 0.9],
    "atr_window": 14,
    "session_blocks": ["ASIA_MID"],
    "regime": {
      "HIGH_VOL": {"conf_mult": 0.8, "thr_add": 0.05},
      "LOW_VOL": {"conf_mult": 1.05, "thr_add": -0.05}
    },
    "use_rule": true,
    "use_pa": true,
    "use_ml": true,
    "use_lstm": true,
    "weights": {"rule": 0.3, "ml": 0.35, "lstm": 0.35}
  },
  
  "session": {
    "timezone": "Etc/UTC",
    "windows": {
      "LONDON": ["07:00", "16:00"],
      "NEWYORK": ["12:00", "21:00"]
    },
    "block_outside": true
  },
  
  "portfolio": {
    "symbols": ["XAUUSD.PRO", "EURUSD.PRO", "NAS100.PRO"],
    "max_open_trades_total": 4,
    "max_risk_per_symbol": 0.01
  },
  
  "risk": {
    "max_daily_loss": 0.02,
    "max_open_trades": 2,
    "position_size_atr_mult": 2.0,
    "stop_loss_atr_mult": 3.0,
    "take_profit_atr_mult": 5.0
  },
  
  "agent": {
    "mode": "guard",
    "enable_supervision": true,
    "enable_risk_gates": true,
    "enable_playbooks": true
  }
}
