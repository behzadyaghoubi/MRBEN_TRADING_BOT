# MR BEN Trading Bot Configuration
# Copy this file to .env and update the values as needed

# Trading Configuration
TRADING_SYMBOL=XAUUSD                    # Trading symbol (XAUUSD, EURUSD, GBPUSD, etc.)
TRADING_TIMEFRAME=M15                    # Timeframe (M1, M5, M15, M30, H1, H4, D1)
TRADING_ENABLED=true                     # Enable/disable trading (true/false)
TRADING_BASE_RISK=0.01                   # Base risk per trade (1% = 0.01)
TRADING_MIN_LOT=0.01                     # Minimum lot size
TRADING_MAX_LOT=2.0                      # Maximum lot size
TRADING_MAX_OPEN_TRADES=3                # Maximum number of open trades
TRADING_DYNAMIC_SENSITIVITY=0.5          # Dynamic sensitivity for risk adjustment
TRADING_START_BALANCE=100000             # Starting balance for calculations
TRADING_STOP_LOSS_PIPS=30                # Default stop loss in pips
TRADING_TAKE_PROFIT_PIPS=60              # Default take profit in pips
TRADING_MAGIC_NUMBER=20250627            # Magic number for trade identification
TRADING_DEVIATION=10                     # Slippage tolerance in points

# MetaTrader5 Configuration
MT5_LOGIN=12345678                       # MT5 account login number
MT5_PASSWORD=your_password_here          # MT5 account password
MT5_SERVER=your_broker_server            # MT5 server name
MT5_TIMEOUT=60000                        # Connection timeout in milliseconds
MT5_ENABLE_REAL_TRADING=false            # Enable real trading (true/false)

# AI Configuration
AI_MODEL_PATH=models/mrben_ai_signal_filter_xgb.joblib  # Path to AI model file
AI_THRESHOLD=0.5                         # AI confidence threshold (0.0-1.0)
AI_FALLBACK_ENABLED=true                 # Enable fallback logic if AI model fails

# Logging Configuration
LOGGING_LEVEL=INFO                       # Log level (DEBUG, INFO, WARNING, ERROR)
LOGGING_FILE_PATH=logs/trading_bot.log   # Log file path
LOGGING_MAX_FILE_SIZE=10485760           # Max log file size in bytes (10MB)
LOGGING_BACKUP_COUNT=5                   # Number of backup log files
LOGGING_CONSOLE_ENABLED=true             # Enable console logging
LOGGING_FILE_ENABLED=true                # Enable file logging

# Database Configuration
DB_TRADES_PATH=data/trades.db            # SQLite database for trades
DB_SIGNALS_PATH=data/signals.db          # SQLite database for signals
DB_BACKUP_ENABLED=true                   # Enable database backups
DB_BACKUP_INTERVAL_HOURS=24              # Backup interval in hours
