{
  "enable_ml": true,
  "enable_portfolio_optimization": true,
  "enable_dynamic_adjustment": true,
  "position_sizing": {
    "default_strategy": "ml_optimized",
    "risk_per_trade": "2%",
    "max_position_size": 10.0,
    "min_position_size": 0.01,
    "kelly_criterion": {
      "max_fraction": 0.25,
      "default_fraction": 0.1
    },
    "volatility_adjustment": {
      "high_volatility_threshold": 100,
      "low_volatility_threshold": 20,
      "high_volatility_factor": 0.7,
      "low_volatility_factor": 1.2
    }
  },
  "portfolio_management": {
    "max_total_exposure": 5.0,
    "max_positions_per_direction": 3,
    "max_positions_per_session": 2,
    "correlation_threshold": 0.7,
    "diversification_target": 0.3
  },
  "ml_models": {
    "sizing_model": {
      "n_estimators": 100,
      "max_depth": 10,
      "random_state": 42,
      "min_samples_split": 5,
      "min_samples_leaf": 2
    },
    "adjustment_model": {
      "n_estimators": 100,
      "max_depth": 8,
      "random_state": 42,
      "min_samples_split": 3,
      "min_samples_leaf": 1
    },
    "training": {
      "auto_training": true,
      "training_interval_hours": 24,
      "min_training_samples": 50,
      "max_training_samples": 10000,
      "validation_split": 0.2
    }
  },
  "dynamic_adjustment": {
    "enabled": true,
    "adjustment_threshold": 0.1,
    "max_adjustments_per_position": 3,
    "adjustment_cooldown_minutes": 30,
    "urgency_levels": {
      "low": 0.1,
      "medium": 0.3,
      "high": 0.5,
      "critical": 0.8
    }
  },
  "risk_management": {
    "max_drawdown_per_position": "5%",
    "max_portfolio_drawdown": "15%",
    "position_correlation_limit": 0.8,
    "volatility_contribution_limit": 0.4,
    "liquidity_requirements": {
      "min_free_margin": "20%",
      "max_margin_utilization": "80%"
    }
  },
  "exit_strategies": {
    "default_strategy": "fixed_tp_sl",
    "trailing_stop": {
      "enabled": true,
      "activation_distance": 20,
      "trailing_distance": 15
    },
    "breakeven": {
      "enabled": true,
      "activation_distance": 15,
      "breakeven_offset": 5
    },
    "time_based": {
      "enabled": false,
      "max_hold_time_hours": 48
    }
  },
  "scaling_methods": {
    "default_method": "volatility_based",
    "linear_scaling": {
      "enabled": true,
      "max_scales": 3,
      "scale_factor": 0.5
    },
    "exponential_scaling": {
      "enabled": false,
      "max_scales": 2,
      "scale_factor": 0.7
    },
    "volatility_based": {
      "enabled": true,
      "volatility_threshold": 50,
      "scale_factor": 0.6
    }
  },
  "performance_tracking": {
    "enabled": true,
    "metrics_window": 100,
    "accuracy_threshold": 0.7,
    "retraining_threshold": 0.6,
    "track_sizing_accuracy": true,
    "track_adjustment_accuracy": true
  },
  "notifications": {
    "enabled": true,
    "position_size_alerts": true,
    "portfolio_exposure_alerts": true,
    "correlation_alerts": true,
    "model_performance_alerts": true
  },
  "integration": {
    "risk_analytics": true,
    "metrics_exposition": true,
    "logging_level": "INFO",
    "debug_mode": false
  }
}
